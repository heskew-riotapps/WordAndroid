<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
 
    android:id="@+id/progress_root"
    style="@style/DialogStyle"
    android:background="@drawable/dialog_background"
	>
 <RelativeLayout  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/progress_inner_background"
    android:id="@+id/alert_top"
	>
	
    <RelativeLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/alert_background"
		android:id="@+id/header"
	>
    <com.riotapps.word.ui.MainFontTextView
         android:id="@+id/alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		style="@style/TextStyle"
		android:text="@string/gameboard_swap_dialog_title_text"
		android:textSize="14dp"
        android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
    />
   <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_button"
        android:layout_alignParentRight="true"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
		/>
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/alert_title"       
     >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/alert_title"
    >
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
     >
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:background="@drawable/tray_tile_bg"
             android:id="@+id/ivLetter1"
             />
         <TextView 
             android:text="T"
             android:textSize="40dp"
             android:layout_marginTop="-40dp"
             android:layout_marginLeft="20dp"
             android:layout_below="@id/ivLetter1"
             />
         
     </RelativeLayout>   
    </LinearLayout>
    </RelativeLayout>
     <RelativeLayout  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/alert_text"
    >
	    <LinearLayout
	        style="@style/FormButtonAreaStyle"
	        android:layout_below="@+id/inner_form" >
		 
		<com.riotapps.word.utils.TypefaceButton 
	  	    style="@style/ButtonStyle"
	  	    android:id="@+id/bOK"
	        android:layout_width="0dp" 
	        android:layout_weight="1.0"
	        android:text="@string/gameboard_swap_dialog_button_text"
	    />
	    <com.riotapps.word.utils.TypefaceButton 
	  	    style="@style/ButtonStyle"
	  	    android:id="@+id/bCancel"
	        android:layout_width="0dp" 
	        android:layout_weight="1.0"
	        android:text="@string/cancel"
	    />
	    </LinearLayout>
    </RelativeLayout>
  </RelativeLayout>
   </RelativeLayout>
 </RelativeLayout>
