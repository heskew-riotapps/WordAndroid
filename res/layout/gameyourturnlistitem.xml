<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"    
    android:layout_height="36dp"
    >
<RelativeLayout 
    style="@style/ContentAreaTextStyle" 
    android:layout_marginBottom=".5dp" >
    <LinearLayout 
		android:layout_width="wrap_content"    
    	android:layout_height="wrap_content"
    	android:id="@+id/llAvatars" >
	   <ImageView 
		   	android:layout_width="34dp"
	   		android:layout_height="34dp"
		    android:id="@+id/ivOpponent1"	
		    android:background="@drawable/image_border"
		    android:layout_marginRight="5dp"
		    android:paddingTop="1dp"
	        android:scaleType="fitXY"    
		 />
	      <ImageView 
		   	android:layout_width="34dp"
	   		android:layout_height="34dp"
		    android:id="@+id/ivOpponent2"	
		    android:background="@drawable/image_border"
		    android:layout_marginRight="5dp"
		    android:paddingTop="1dp"
	        android:scaleType="fitXY"
	        android:layout_toRightOf="@id/ivOpponent1"	  
		 />
	     <ImageView 
		   	android:layout_width="34dp"
	   		android:layout_height="34dp"
		    android:id="@+id/ivOpponent3"	
		    android:background="@drawable/image_border"
		    android:layout_marginRight="5dp"
		    android:paddingTop="1dp"
	        android:scaleType="fitXY"  
	        android:layout_toRightOf="@id/ivOpponent2"	    
		 />
     </LinearLayout>

	      <TableLayout  
	           android:layout_toRightOf="@id/llAvatars"   
		        android:id="@+id/tbOpponents"
		   	 	android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_marginLeft="1dp"
		     >
    		<TableRow 
    		    android:id="@+id/trOpponent1">
   		     	<ImageView  
				     android:id="@+id/ivOpponentBadge_1"
					 style="@style/ScoreboardBadgeStyle"
				 />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvOpponent_1"
		            style="@style/ScoreboardPlayerStyle"
		            />
		     
		    </TableRow>
		     <TableRow 
		         android:paddingTop="1dp"
		         android:id="@+id/trOpponent2">
   		     	<ImageView  
				     android:id="@+id/ivOpponentBadge_2"
					 style="@style/ScoreboardBadgeStyle"
				 />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvOpponent_2"
		            style="@style/ScoreboardPlayerStyle"
		            />
		  
		    </TableRow>
		    <TableRow android:paddingTop="1dp"
		        android:id="@+id/trOpponent3">
   		     	<ImageView  
				     android:id="@+id/ivOpponentBadge_3"
					 style="@style/ScoreboardBadgeStyle"
				 />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvOpponent_3"
		            style="@style/ScoreboardPlayerStyle"
		            />
		  
		    </TableRow>
    	</TableLayout>
</RelativeLayout>
 
</LinearLayout>
 