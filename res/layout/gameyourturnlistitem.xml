<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"    
    android:layout_height="36dp"
    >
<RelativeLayout 
    style="@style/ContentAreaTextStyle" 
    android:layout_marginBottom=".5dp" >
    	<LinearLayout
	       	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:id="@+id/rlAvatars"
	     >
	       <ImageView 
			   	android:layout_width="46dp"
		   		android:layout_height="46dp"
			    android:id="@+id/ivOpponent1"	
			    android:background="@drawable/image_border"
			    android:layout_marginRight="5dp"
			    android:paddingTop="1dp"
		        android:scaleType="fitXY"    
			 />
	 	  <ImageView 
			   	android:layout_width="46dp"
		   		android:layout_height="46dp"
			    android:id="@+id/ivOpponent2"	
			    android:background="@drawable/image_border"
			    android:layout_marginRight="5dp"
			    android:paddingTop="1dp"
		        android:scaleType="fitXY"
		        android:layout_toRightOf="@id/ivOpponent1"	  
			 />
		     <ImageView 
			   	android:layout_width="46dp"
		   		android:layout_height="46dp"
			    android:id="@+id/ivOpponent3"	
			    android:background="@drawable/image_border"
			    android:layout_marginRight="5dp"
			    android:paddingTop="1dp"
		        android:scaleType="fitXY"  
		        android:layout_toRightOf="@id/ivOpponent2"	    
			 />
	     </LinearLayout>
	     <RelativeLayout
	         	android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:id="@+id/rlPlayer_1"
	   			android:layout_toRightOf="@id/rlAvatars"
	         >
        <ImageView  
		    android:id="@+id/ivOpponentBadge_1"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:layout_marginTop="2dp"
			android:layout_marginRight="1dp"
		 />
          <com.riotapps.word.ui.MainFontTextView
            android:id="@+id/tvOpponent_1"
            style="@style/SubTextStyle"
            android:textSize="10.8dp"
            android:layout_toRightOf="@id/ivOpponentBadge_1"
        />
         </RelativeLayout> 
	     <RelativeLayout
	         	android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:id="@+id/rlPlayer_2"
	   			android:layout_toRightOf="@id/rlAvatars"
	   			android:layout_below="@id/rlPlayer_1"
	         >        
	       
	       <ImageView  
			     android:id="@+id/ivOpponentBadge_2"
			     android:layout_width="10dp"
				android:layout_height="10dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="1dp"
				android:layout_below="@id/rlPlayer_1"
			 />
	        <com.riotapps.word.ui.MainFontTextView
	            android:id="@+id/tvOpponent_2"
	            style="@style/SubTextStyle"
                android:textSize="10.8dp"
	            android:layout_toRightOf="@id/ivOpponentBadge_2"
	            />
		  </RelativeLayout>
		  <RelativeLayout
	         	android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:id="@+id/rlPlayer_3"
	   			android:layout_toRightOf="@id/rlAvatars"
	   			android:layout_below="@id/rlPlayer_2"
	         >
	        <ImageView  
			     android:id="@+id/ivOpponentBadge_3"
				android:layout_width="10dp"
				android:layout_height="10dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="1dp"
				android:layout_below="@id/rlPlayer_2"
			/>	 
	        <com.riotapps.word.ui.MainFontTextView
	            android:id="@+id/tvOpponent_3"
	            style="@style/SubTextStyle"
	            android:textSize="10.8dp"
	            android:layout_toRightOf="@id/ivOpponentBadge_3"
	        />
		            
 			</RelativeLayout>
</RelativeLayout>
 
</LinearLayout>
 