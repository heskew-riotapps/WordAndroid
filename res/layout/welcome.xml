<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg" 
      android:paddingLeft="25dp"
    android:paddingRight="25dp" 
    android:paddingBottom="25dp">
	<ImageView 
	    android:src="@drawable/wordsmash_logo1"
	    android:contentDescription="@string/logo"
	     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="20dp" 
        android:id="@+id/logo"
	    />
	<View 
	    android:layout_below="@id/logo"
	    android:layout_height="fill_parent"
	     android:layout_width="fill_parent"
	     android:background="@drawable/form_background"
	     android:id="@+id/bg"
	     android:padding="15dp"
	    
    />
	
	<View 
	    android:layout_below="@id/logo"
	    android:layout_height="fill_parent"
	     android:layout_width="fill_parent"
	     android:background="@drawable/inner_form_background"
	     android:id="@+id/bgInner"
	     android:layout_margin="5dp"
	    
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="@string/welcome_message" 
       android:id="@+id/welcome_msg"
        android:layout_below="@id/logo"
        android:layout_centerVertical="true"
		android:layout_centerInParent="true"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:background="#f97a05"
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="@string/join_via_facebook" 
        android:id="@+id/byFacebook"
        android:layout_below="@id/welcome_msg"
        android:layout_centerVertical="true"
		android:layout_centerInParent="true"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:clickable="true"
        />	
  	<Button android:id="@+id/btnFacebook"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
         android:text="@string/join_via_facebook"
        />
    <Button android:id="@+id/btnNative"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="@string/join_via_native"
        />
</RelativeLayout>