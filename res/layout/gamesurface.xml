<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutStyle" >
     <RelativeLayout 
	    android:id="@+id/topControlsPlaceholder"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@null"  
	    android:layout_marginBottom="3dp"
	    >
	     <RelativeLayout
	       android:id="@+id/scoreboardTop"
	    	android:layout_width="wrap_content"
	   	 	android:layout_height="30dp"
	   	 	android:background="@drawable/scoreboard_top"
	    	android:layout_marginLeft="3dp" 
	        android:layout_marginTop="-2dp" 
	        android:layout_alignRight="@id/topControlsPlaceholder"
	    
	        android:paddingLeft="4dp"
	        android:paddingRight="4dp" 
	    >    
	     	
	      <TableLayout     
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent" 
		     >
    		<TableRow android:layout_marginTop="2dp">
    		     <ImageView 
				       	android:id="@+id/logo"
					   	android:layout_width="6dp"
					   	android:src="@drawable/red_dot"
	   	 				android:layout_height="6dp"
	   	 				android:layout_gravity="center_vertical"
	   	 				android:layout_marginRight="2dp"
				   />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/contextPlayer"
		            android:text="Hunter E."
		            android:textColor="#000000"
		            android:textStyle="bold"
		            android:textSize="10dp"
		            android:layout_gravity="center_vertical"
		            
		            />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/contextPlayerScore"
		            android:text="10"
		            android:textColor="#000000"
		          
		            android:textSize="10dp"
		            android:layout_marginRight="10dp"
		            android:gravity="right"
            		android:layout_weight="1.0"
	            />
		         <com.riotapps.word.ui.ScoreboardFontTextView
		         	android:id="@+id/contextPlayerScore"
		            android:text="428"
		            android:textColor="#000000"
		            android:textSize="10dp"
		            android:gravity="left"
		             
	            />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		             android:id="@+id/opponent_3"
		            android:text="Junior18"
		            android:textColor="#000000"
		  
		            android:layout_below="@id/contextPlayer"
		            android:textSize="10dp"
		             android:layout_marginLeft="6dp"
		             android:gravity="right"
            		android:layout_weight="1.0"
            		android:layout_gravity="center_vertical"
		            />
		         <ImageView 
				       	android:id="@+id/logo"
					   	android:layout_width="6dp"
					   	android:src="@drawable/red_dot"
	   	 				android:layout_height="6dp"
	   	 				android:layout_gravity="center_vertical"
	   	 				android:layout_marginLeft="2dp"
				   />
		       </TableRow>
		       <TableRow>
		         <ImageView 
				       	android:id="@+id/logo"
					   	android:layout_width="6dp"
					   	android:src="@drawable/red_dot"
	   	 				android:layout_height="6dp"
	   	 				android:layout_gravity="center_vertical"
	   	 				android:layout_marginRight="2dp"
				   />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/opponent_2"
		            android:text="Stephanie S."
		            android:textColor="#000000"
		            android:textStyle="bold"
		            android:textSize="10dp"
		            android:layout_gravity="center_vertical"
		            
		            />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/contextPlayerScore"
		            android:text="2"
		            android:textColor="#000000"
		         
		            android:textSize="10dp"
		            android:gravity="right"
            		android:layout_weight="1.0"
            		android:layout_marginRight="15dp"
	            />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/contextPlayerScore"
		            android:text="56"
		            android:textColor="#000000"
		          
		            android:textSize="10dp"
	            />
		        
		         <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/opponent_4"
		            android:text="Matt C."
		            android:textColor="#000000"
		       
		            android:layout_below="@id/contextPlayer"
		            android:textSize="10dp"
		            android:layout_marginLeft="6dp"
		          	android:gravity="right"
            		android:layout_weight="1.0"
            		android:layout_gravity="center_vertical"
            
		            />
		         <ImageView 
				       	android:id="@+id/logo"
					   	android:layout_width="6dp"
					   	android:src="@drawable/red_dot"
	   	 				android:layout_height="6dp"
	   	 				android:layout_gravity="center_vertical"
	   	 				android:layout_marginLeft="2dp"
				   />
		       </TableRow>
    		
				</TableLayout> 
	    </RelativeLayout>
	    <RelativeLayout
	       android:id="@+id/scoreboardNumbers"
	    	android:layout_width="100dp"
	   	 	android:layout_height="18dp"
	   	 	android:background="@drawable/scoreboard_top"
	    	android:layout_marginRight="3dp" 
	        android:layout_marginTop="-2dp" 
	        android:layout_alignRight="@id/topControlsPlaceholder"
	        android:layout_toRightOf="@id/scoreboardTop"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp" 
	    >    
	     	
	     	<com.riotapps.word.ui.ScoreboardFontTextView
	            android:id="@+id/lettersLeft"
	            android:text="98 letters left"
	            android:textColor="#000000"
	            android:textSize="10dp"
	            android:layout_marginTop="3dp"
	            android:gravity="left"
	            android:layout_marginRight="4dp"
	         />
	     	<com.riotapps.word.ui.ScoreboardFontTextView
	            android:id="@+id/pointsTerm"
	            android:text="98 points"
	            android:textColor="#000000"
	            android:textSize="10dp"
	            android:layout_marginLeft="4dp"
	            android:layout_marginTop="3dp"
	       		android:gravity="right"
	         />
	    </RelativeLayout>

		</RelativeLayout>     
		<RelativeLayout
		    android:layout_below="@id/topControlsPlaceholder"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"  
		 >
	    	<com.riotapps.word.ui.GameSurfaceView 
	    	    android:layout_below="@id/topControlsPlaceholder"
	        	android:id="@+id/gameSurface"
	        	android:layout_margin="0dp"
	        />
	    
	    </RelativeLayout>
 
     <View 
	    android:id="@+id/bottomControlsPlaceholder"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:scaleType="centerInside"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="0dp"
	    android:background="#ffffff" 
	    />
</RelativeLayout>