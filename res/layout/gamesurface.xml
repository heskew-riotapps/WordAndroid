<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutStyle" >
     <RelativeLayout 
	    android:id="@+id/topControlsPlaceholder"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:scaleType="centerInside"
	    android:layout_alignParentTop="true"
	    android:background="@null" 
	    >
	    <ImageView 
       android:id="@+id/logo"
       android:contentDescription="@string/logo"
	   style="@style/TopLogoBoardStyle" 
	   />
	    <RelativeLayout 
	        android:id="@+id/scoreboard"
	    	android:layout_width="wrap_content"
	   	 	android:layout_height="wrap_content"
	   	 	android:background="@null"
	    	android:layout_below="@id/logo"
	    >
	     <RelativeLayout 
	        android:id="@+id/scoreboard"
	    	android:layout_width="wrap_content"
	   	 	android:layout_height="wrap_content"
	   	 	android:background="@drawable/scoreboard_background"
	    	android:layout_below="@id/logo"
	    	android:paddingLeft="3dp"
	    	android:layout_marginTop="2dp"
	    	android:layout_marginLeft="3dp"    
	    	android:layout_marginRight="3dp"
	    	android:layout_marginBottom="-6dp"
	    >
	         <ImageView 
		       	android:id="@+id/ivPlayerScoreboard"
 				android:layout_width="wrap_content"
	   	 		android:layout_height="30dp"
		 		android:layout_below="@id/logo"
			   />
	        <TextView
	            android:id="@+id/contextPlayer"
	            android:text="Hunter Eskew"
	            android:textColor="#ffffff"
	            android:textStyle="bold"
	            android:textSize="10dp"
	            android:paddingLeft="2dp"
	            />
	         <TextView
	            android:text="Dave Cox"
	            android:textColor="#ffffff"
	            android:textStyle="bold"
	            android:layout_below="@id/contextPlayer"
	            android:textSize="10dp"
	            android:paddingLeft="2dp"
	            />
	         </RelativeLayout>   
	        <View 
	    android:id="@+id/bottomControlsPlaceholder"
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
 
	    android:layout_alignParentBottom="true"
	    android:background="#eec591"
	    />
	    </RelativeLayout>
         
	</RelativeLayout>
	<View 
	    android:id="@+id/bottomControlsPlaceholder"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:scaleType="centerInside"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="0dp"
	    android:background="@null"
	    />

	<RelativeLayout
	    android:layout_below="@id/topControlsPlaceholder"
	    android:layout_above="@id/bottomControlsPlaceholder"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"    
	 >
	
    	<com.riotapps.word.ui.GameSurfaceView 
        	android:id="@+id/gameSurface"
        	android:layout_margin="0dp"
        	android:scrollbars="horizontal|vertical"
        />
    
    </RelativeLayout>	 
</RelativeLayout>