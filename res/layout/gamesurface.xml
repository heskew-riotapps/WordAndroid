<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutStyle" >

<RelativeLayout
    android:id="@+id/scoreboard"
    android:layout_width="fill_parent"
	   	 	android:layout_height="30dp"
	   	 	android:background="@drawable/sbd_bg"
    >
	      <TableLayout     
		        android:id="@+id/scoreboardTop"
		   	 	android:layout_height="30dp"
		   	  
		    	android:layout_marginLeft="3dp" 
		       
				android:layout_alignParentLeft="true"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"  
			    android:layout_width="wrap_content"
		     >
    		<TableRow android:paddingTop="2dp">
    		     <ImageView 
				       	android:id="@+id/ivPlayerTurn_1"
					   	style="@style/ScoreboardTurnStyle"
				   />
    		     <ImageView  
				       	android:id="@+id/ivPlayerBadge_1"
					   	style="@style/ScoreboardBadgeStyle"
				   />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvPlayer_1"
		            style="@style/ScoreboardPlayerStyle"
		            />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvPlayerScore_1"
		           style="@style/ScoreboardScoreStyle"
 	            />
		         <ImageView 
				       	android:id="@+id/ivPlayerTurn_3"
					   	style="@style/ScoreboardTurnStyle"
				   />
		         <ImageView 
				       	android:id="@+id/ivPlayerBadge_3"
					   	style="@style/ScoreboardBadgeStyle"
				   />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvPlayer_3"
		            style="@style/ScoreboardPlayerStyle"
		            />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvPlayerScore_3"
		            style="@style/ScoreboardScoreStyle"
	            />
		       </TableRow>
		       <TableRow>
		        <ImageView 
				       	android:id="@+id/ivPlayerTurn_2"
					   	style="@style/ScoreboardTurnStyle"
				   />
		         <ImageView 
				       	android:id="@+id/ivPlayerBadge_2"
					   	style="@style/ScoreboardBadgeStyle" 
				   />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvPlayer_2"
		            style="@style/ScoreboardPlayerStyle"
		            />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvPlayerScore_2"
		            style="@style/ScoreboardScoreStyle"
	            />
		       <ImageView 
				    android:id="@+id/ivPlayerTurn_4"
					style="@style/ScoreboardTurnStyle"
				/>
		       <ImageView 
				       	android:id="@+id/ivPlayerBadge_4"
					   	style="@style/ScoreboardBadgeStyle"
				   />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvPlayer_4"
		            style="@style/ScoreboardPlayerStyle" 
		            />
		        <com.riotapps.word.ui.ScoreboardFontTextView
		            android:id="@+id/tvPlayerScore_4"
		            style="@style/ScoreboardScoreStyle"
	            />
		       </TableRow>
			</TableLayout> 
		 
	    <RelativeLayout
	       android:id="@+id/scoreboardNumbers"
	    	android:layout_width="wrap_content"
	   	 	android:layout_height="wrap_content"
	    	android:paddingRight="4dp" 
	        android:layout_alignParentRight="true"
	        android:paddingTop="2dp"
	    >    
	     	<com.riotapps.word.ui.ScoreboardFontTextView
	            android:id="@+id/tvLettersLeft"
	            android:text="98 letters left"
	            android:textColor="#000000"
	            android:textSize="10dp"
	            
	            android:gravity="right"
	          
	         />
	     	<com.riotapps.word.ui.ScoreboardFontTextView
	            android:id="@+id/tvNumPoints"
	            android:textColor="#000000"
	            android:textSize="10dp"
	            android:layout_below="@id/tvLettersLeft"
	             
	       		android:gravity="right"
	         />
	    </RelativeLayout>
</RelativeLayout>
   <View 
	    android:id="@+id/bottomBorder"
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:background="#eec591" 
	       android:layout_below="@id/scoreboard"
	    />
	        
		<RelativeLayout
		    android:layout_below="@id/bottomBorder"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"  
		 >
	    	<com.riotapps.word.ui.GameSurfaceView 
	    	    android:layout_below="@id/bottomBorder"
	        	android:id="@+id/gameSurface"
	        	android:layout_margin="0dp"
	        	android:background="@null"
	        />
	    
	    </RelativeLayout>
 
	<LinearLayout
        android:orientation="horizontal"
    	android:layout_alignParentBottom="true"
     
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="fill_parent" 
        android:layout_height="48dp"
       
        android:gravity="center"
      
        android:background="@drawable/gameboard_btn_area_bg" >
	<com.riotapps.word.ui.ScoreboardButton 
  	    style="@style/GameBoardButtonStyle"
  	    android:id="@+id/bPlayedWords"
        android:layout_width="0dp" 
        android:layout_weight="1.0"
        android:text="@string/gameboard_played_words_button_text"
    />
	<com.riotapps.word.ui.ScoreboardButton 
  	    style="@style/GameBoardButtonStyle"
  	    android:id="@+id/bChat"
        android:layout_width="0dp" 
        android:layout_weight="1.0"
        android:text="@string/gameboard_chat_button_text"
    />
	 <com.riotapps.word.ui.ScoreboardButton 
  	    style="@style/GameBoardButtonStyle"
  	    android:id="@+id/bSwap"
        android:layout_width="0dp" 
        android:layout_weight="1.0"
        android:text="@string/gameboard_swap_button_text"
    />
	 <com.riotapps.word.ui.ScoreboardButton 
  	    style="@style/GameBoardButtonStyle"
  	    android:id="@+id/bShuffle"
        android:layout_width="0dp" 
        android:layout_weight="1.0"
        android:text="@string/gameboard_shuffle_button_text"
    />
	<com.riotapps.word.ui.ScoreboardButton 
  	    style="@style/GameBoardButtonStyle"
  	    android:id="@+id/bPlay"
        android:layout_width="0dp" 
        android:layout_weight="1.0"
        android:text="@string/gameboard_play_button_text"
    />
    <com.riotapps.word.ui.ScoreboardButton 
        style="@style/GameBoardButtonStyle"
        android:id="@+id/bCancel"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:text="@string/gameboard_cancel_button_text"
    />
    </LinearLayout>
   
</RelativeLayout>