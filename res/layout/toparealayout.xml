<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fullLogoArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

      >  
      <RelativeLayout 
        android:id="@+id/logoArea" 
    	style="@style/TopLogoAreaStyle"
    	>
    <ImageView 
        android:id="@+id/ivHeaderContextPlayer"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/img_black_bg"
        android:paddingLeft="7px"
        android:paddingTop="5px"
        android:paddingRight="9px" 
        android:paddingBottom="10px" 
        />
      <com.riotapps.word.ui.MainFontTextView 
        android:id="@+id/tvHeaderContextPlayerName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"      
        />	
      <com.riotapps.word.ui.MainFontTextView 
        android:id="@+id/tvHeaderContextPlayerWins"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"     
        android:layout_toLeftOf="@id/ivHeaderContextPlayer"
        android:layout_below="@id/tvHeaderContextPlayerName"        />	
      
      <ImageView 
        android:id="@+id/ivHeaderContextPlayerBadge"
        android:layout_height="12dp"
        android:layout_width="12dp"
        android:layout_toLeftOf="@id/tvHeaderContextPlayerWins"
        android:layout_below="@id/tvHeaderContextPlayerName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        />
     <ImageView 
       android:id="@+id/logo"
	    style="@style/TopLogoStyle"  
	  />
     </RelativeLayout>
     <View
         android:id="@+id/logoAreaBottom"
         style="@style/TopLogoAreaBottomStyle" 

         ></View>
</RelativeLayout>