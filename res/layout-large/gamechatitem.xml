<?xml version="1.0" encoding="utf-8"?>
 
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@color/normal_color"
	android:paddingBottom="1dp"
    android:paddingLeft="2dp" 
    android:paddingRight="5dp" 
    android:paddingTop="2dp" 
    android:id="@+id/rlItem"
 
	>
	<TextView
         android:textSize="14dp"
     	android:id="@+id/tvPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="42dp"
        android:padding="1dp"
        android:textStyle="normal"
        android:textColor="@color/chat_text"
       
        />
   <TextView
        android:textSize="12dp"
     	android:id="@+id/tvChatDate"
     	android:layout_marginLeft="2.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/tvPlayerName"
   		android:layout_alignBottom="@id/tvPlayerName"
        android:padding="1dp"
        android:textStyle="normal"
        android:textColor="@color/chat_text"
        android:layout_marginTop="0dp"
        />
   <ImageView 
	   	android:layout_width="36dp"
   		android:layout_height="36dp"
	    android:id="@+id/ivPlayer"	
	    android:background="@drawable/image_border"
	    android:layout_marginRight="2dp"
	    android:layout_marginLeft="2dp"
	    android:paddingTop="1dp"
        android:scaleType="fitXY"  
        android:layout_below="@id/tvPlayerName" 
	 />

	<TextView
         android:textSize="14dp"
     	android:id="@+id/tvChat"
     	android:layout_marginLeft="2.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/ivPlayer"
        android:layout_below="@id/tvPlayerName"
        android:background="@drawable/chat_player1_background"
        android:padding="3dp"
        android:textStyle="normal"
        android:textColor="@color/chat_text"
        />
    
</RelativeLayout>
 
 